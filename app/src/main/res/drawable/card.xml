<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_shortAnimTime" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#33000000" />

            <solid android:color="@color/card" />

            <padding
                android:left="1dp"
                android:right="1dp"
                />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="3dp"
                android:color="#33000000" />

            <solid android:color="@color/card" />

            <padding
                android:left="1dp"
                android:right="1dp"
                />

            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>