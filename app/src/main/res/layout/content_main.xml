<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gullesnuffs.codenames.MainActivity"
    android:background="@color/main_background"
    tools:showIn="@layout/activity_main">

    <TableLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="5"
        android:stretchColumns="*"
        tools:layout_editor_absoluteX="0dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TableLayout>

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/instructions_enter_words"
        android:layout_marginTop="8dp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board" />

    <LinearLayout
        android:id="@+id/color_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instructions">
        <Button
            android:id="@+id/place_red_spy_button"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red_team_color"
            android:text="Red spy">
        </Button>
        <Button
            android:id="@+id/place_blue_spy_button"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue_team_color"
            android:text="Blue spy">
        </Button>
        <Button
            android:id="@+id/place_civilian_button"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/civilian_color"
            android:text="Civilian">
        </Button>
        <Button
            android:id="@+id/place_assassin_button"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/assassin_color"
            android:text="Assassin">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remaining_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board">
        <TextView
            android:id="@+id/red_spies_remaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/remaining_text_size"
            android:textColor="@color/red_team_color"
            android:text="9">
        </TextView>
        <TextView
            android:id="@+id/civilians_remaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/remaining_text_size"
            android:textColor="@color/civilian_color"
            android:text="7">
        </TextView>
        <TextView
            android:id="@+id/blue_spies_remaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/remaining_text_size"
            android:textColor="@color/blue_team_color"
            android:text="8">
        </TextView>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/clue_list"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/clue_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:alwaysDrawnWithCache="false"
        android:animationCache="false"
        />

    <Button
        android:id="@+id/randomize"
        android:background="@drawable/dice_6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="70dp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toBottomOf="@id/color_picker"
        app:layout_constraintRight_toRightOf="@id/guidelineL1"
        app:layout_constraintLeft_toLeftOf="@id/guidelineL1"
        app:layout_constraintBottom_toTopOf="@id/nextGameState"
        android:backgroundTint="#EEE" />

    <Button
        android:id="@+id/take_a_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_photo_camera_white_24dp"
        android:backgroundTint="#EEE"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toBottomOf="@id/color_picker"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        app:layout_constraintLeft_toRightOf="@id/guideline2"
        app:layout_constraintBottom_toTopOf="@id/nextGameState"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/nextGameState"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_check_black_36dp"
        android:elevation="4dp"
        app:fabSize="mini"
        app:backgroundTint="#EEEEEE"
        />

    <LinearLayout
        android:id="@+id/clue_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/remaining_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/get_red_clue_button"
            android:layout_width="@dimen/get_clue_button_width"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_team_color"
            android:layout_marginRight="@dimen/get_clue_button_padding"
            android:text="Red clue">
        </Button>
        <Button
            android:id="@+id/get_blue_clue_button"
            android:layout_width="@dimen/get_clue_button_width"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_team_color"
            android:layout_marginLeft="@dimen/get_clue_button_padding"
            android:text="Blue clue">
        </Button>
    </LinearLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guidelineL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />


</android.support.constraint.ConstraintLayout>
