<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gullesnuffs.codenames.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/instructions_enter_words"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="5"
        android:stretchColumns="*"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/instructions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TableLayout>

    <LinearLayout
        android:id="@+id/color_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board">
        <Button
            android:id="@+id/place_red_spy_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/red_team_color"
            android:text="Red spy">
        </Button>
        <Button
            android:id="@+id/place_blue_spy_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue_team_color"
            android:text="Blue spy">
        </Button>
        <Button
            android:id="@+id/place_civilian_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/civilian_color"
            android:text="Civilian">
        </Button>
        <Button
            android:id="@+id/place_assassin_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/assassin_color"
            android:text="Assassin">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/take_a_photo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/color_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="or"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/take_a_photo"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:text="Take a photo"
            android:layout_marginTop="8dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/clue_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/color_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/get_red_clue_button"
            android:layout_width="@dimen/get_clue_button_width"
            android:layout_height="wrap_content"
            android:background="@color/red_team_color"
            android:layout_marginRight="@dimen/get_clue_button_padding"
            android:text="Red clue">
        </Button>
        <Button
            android:id="@+id/get_blue_clue_button"
            android:layout_width="@dimen/get_clue_button_width"
            android:layout_height="wrap_content"
            android:background="@color/blue_team_color"
            android:layout_marginLeft="@dimen/get_clue_button_padding"
            android:text="Blue clue">
        </Button>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
